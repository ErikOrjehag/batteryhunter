
{
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/ros/ws/src/batteryhunter,type=bind,consistency=cached", 
  "workspaceFolder": "/home/ros/ws/src/batteryhunter",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
    "remoteUser": "ros",
    "runArgs": [
      "--privileged",
      "--network=host"
    ],
    "customizations": {
      "vscode": {
        "settings": {
          "terminal.integrated.defaultProfile.linux": "bash",
          "terminal.integrated.profiles.linux": {
            "bash": {
                "path": "/bin/bash"
            }
          }
        },
        "extensions": [
          "DarrenLevine.auto-debug",
          "dotjoshjohnson.xml",
          "ms-azuretools.vscode-docker",
          "ms-iot.vscode-ros",
          "ms-python.python",
          "ms-vscode.cpptools",
          "redhat.vscode-yaml",
          "smilerobotics.urdf",
          "streetsidesoftware.code-spell-checker",
          "twxs.cmake",
          "yzhang.markdown-all-in-one",
          "eamodio.gitlens",
          "njpwerner.autodocstring"
        ]
      }
    }
}
